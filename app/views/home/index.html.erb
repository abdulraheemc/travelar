<script type="text/javascript">
  function f1(){
    //alert("Hello");
    document.myform.submit(this.form);
  }
</script>
<%if flash[:warning] %>
  <%= flash[:warning] %>
<% end %>

<%= form_tag(home_index_path, :name=>'myform')  do %>
  <div id="sidemenu">
    
    <table class="table table" border="0">
  <tbody>
    <tr><th width="60%">Agency</th><th><%= link_to "Clear Filter", home_index_path() %></th></tr> 
    <% @agencies.each do |agency| %>
      <tr>
        <td colspan=2>
<%= check_box_tag "agency_ids[]", agency.id, @selected_agencies.include?(agency.id.to_s), :onclick => "javascript: f1();" %><%=agency.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<table class="table table" border="0">
  <tbody>
    <tr><th width="60%">PriceRange</th><th><%= link_to "Clear Filter", home_index_path() %></th>
    </tr>  
    <% @prices.each do |price| %>
      <tr>
        <td>
<%= check_box_tag "price_ids[]", price.price, @selected_prices.include?(price.price.to_s), :onclick => "javascript: f1();" %><%=price.price - 5000%> - <%=price.price %>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<table class="table table" border="0">
  <tbody>
    <tr><tr><th width="60%">Duration</th><th><%= link_to "Clear Filter", home_index_path() %></th></tr>  
    <% @durations.each do |duration| %>
      <tr>
        <td>
        <%= check_box_tag "duration_ids[]", duration.duration, @selected_durations.include?(duration.duration.to_s), :onclick => "javascript: f1();" %><%=duration.duration %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>


<div id="content">

<div id="my-posts">    
 <table class="table table-bordered" border="0">
  <tbody>
      <tr>
    <% @packages.each do |package| %>
    <% @a = @a +1 %>
        <td width="311" height="200" style="background:#fff;text-align: center;">

          <center><figure class="img_wrapper" style="position: relative;"><h3 style="text-align:left;margin:0;padding:0px 0 0 0; color:#f5f5f5;position: absolute;top:0;left: 0;width:100%;"><%= package.agency.name%></h3><%= image_tag package.image.url %></figure></center><h3 style="margin:10px 0;color:#f00"><%= package.agency.name%></h3><h2 style="margin:0px 0 10px 0;"><%= package.name %></h2><p>Price: <%= package.price %></p><p>Duration: <%= package.duration %></p><p>Some description goes here for each package....</p>
        <%= link_to "Book Now", pilgrim_new_path(package), class: "btn btn-primary" %>

        </td>

    <% if @a ==2 %>
    </tr>
    <tr>
    <% end %>
    <% end %>
      </tr>
  </tbody>
</table>
<% end %>
</div>

<div id="with-button">
    <center><%= will_paginate @packages, :params => {:agency_ids => params[:agency_ids],:price_ids => params[:price_ids],:duration_ids => params[:duration_ids] }, renderer: BootstrapPagination::Rails %></center>
</div>







