<script type="text/javascript">
  function f1(){
    //alert("Hello");
    document.myform.submit(this.form);
  }
</script>
<style type="text/css">
  #sidemenu {
  background-color:#CCCCCC;
  margin: 0% 0.5% 1% 0%;
  width:auto;
  height: 60%;
  float: left;  
}
td, th {
  padding: 5px;
}


</style>

<div class ="search">

<section class="tour section-wrapper container">    
    <div class="row col-md-12">
      <div class="col-md-2">
        <form role="form" class="form-dropdown">
          <div class="form-group">
            <select class="form-control border-radius" id="sel1">
            <%= select_tag 'starting_city', options_for_select(Package.all.collect{ |u| [u.starting_city] }) %>
           
            </select>
          </div>
        </form>
      </div>

      <div>
      <div class="col-md-2">
        <form role="form" class="form-dropdown">
          <div class="form-group">
            <select class="form-control border-radius" id="sel1">
              <option>Umrah</option>
               <option>Hajj</option>
              <option>Ziyarath</option>
       
            </select>
          </div>
        </form>
      </div>

      
      <div class="col-md-2">
        <div class="input-group">
          <input type="text" class="form-control border-radius border-right" id="datetimepicker9" placeholder="Journey Date"/>
          <span class="input-group-addon border-radius custom-addon">
            <i class="ion-ios-calendar"></i>
          </span>
        </div>
      </div>

      <div class="col-md-2">
        <div class="input-group">
          <input type="text" class="form-control border-radius border-right" placeholder="No.Of Tickets"/>
          <span class="input-group-addon border-radius custom-addon">
            <i class="ion-ios-calendar"></i>
          </span>
        </div>
      </div>

      <div class="col-md-2">
        <div class="btn btn-success border-radius custom-button">
          Search
        </div>
      </div>
    </div>
  </section>

</div>

<div class="main col-lg-12">
  <div class="col-lg-3">

  <%= form_tag(home_index_path, :name=>'myform')  do %>
    <div id="sidemenu">
    <table>
      <tbody>
        <tr>
        <th width="60%">Agency</th><th><%= link_to "Clear Filter", home_index_path() %></th>
        </tr> 
        <% @agencies.each do |agency| %>
          <tr>
            <td colspan=2>
              <%= check_box_tag "agency_ids[]", agency.id, @selected_agencies.include?(agency.id.to_s), :onclick => "javascript: f1();" %><%=agency.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
   </table>
  <hr>
  <table>
    <tbody>
      <tr><th>PriceRange </th>
      <th><%= link_to "Clear Filter", home_index_path() %></th>

      </tr>  
      <% @prices.each do |price| %>
        <tr>
          <td>
          <%= check_box_tag "price_ids[]", price.price, @selected_prices.include?(price.price.to_s), :onclick => "javascript: f1();" %><%=price.price - 5000%> - <%=price.price %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <table>
    <tbody>
      <tr><th width="60%">Duration</th><th><%= link_to "Clear Filter", home_index_path() %></th></tr>  
      <% @durations.each do |duration| %>
        <tr>
          <td>
          <%= check_box_tag "duration_ids[]", duration.duration, @selected_durations.include?(duration.duration.to_s), :onclick => "javascript: f1();" %><%=duration.duration %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
  </div>
  </div>
   <div class="col-lg-9">
      <% @packages.each do |package| %>
      <div class="col-lg-6 col-md-4 col-sm-6 col-xs-12">
          <div class="hovereffect">
              <figure class="img_wrapper" style="position: relative;"><%= image_tag package.image.url, class: "img-responsive" %></figure>
              <div class="overlay">
                 <h2><%= package.price %> dirhams</h2>                 
              </div>
          </div><br/><br/>
          <%= link_to "Book Now", pilgrim_new_path(package), class: "btn btn-primary"%><br/><br/>
      </div>
      <% end %>
      <div id="with-button">
        <center><%= will_paginate @packages, :params => {:agency_ids => params[:agency_ids],:price_ids => params[:price_ids],:duration_ids => params[:duration_ids] }, renderer: BootstrapPagination::Rails %></center>
      </div>
   </div>
</div>