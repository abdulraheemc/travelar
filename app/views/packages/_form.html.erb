<%= form_for @package , html: { multipart: true }  do |f| %>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% @package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <%= f.hidden_field :agency_id, :value => @agency.id if @agency %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Starting_city %><br>
    <%= f.text_field :starting_city %>
  </div>
  <div class="field">
    <%= f.label :Trip_to %><br>
    <%= f.text_field :trip_to %>
  </div>
  <div class="field">
    <%= f.label :journey_date %><br>
    <%= f.date_field :journey_date %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :Number_of_Tickets %><br>
    <%= f.text_field :ticket_no %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
</div>
  
  
<% end %>
